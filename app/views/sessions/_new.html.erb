<div class="session_new"><h1>Sign in!</h1>
<%= form_for(:session, url: sessions_path, remote: true) do |f| %>
	<div class="field">
		<p>Name: </p>
  		<%= f.text_field :name %>
  	</div>
  	<div class="field">
  		<p>Password: </p>
  		<%= f.password_field :virtual_password %>
  	</div>
  	<div class="actions"><%= f.submit "Sign in"%></div>
<% end %>
<br/><b>New user?<b/>
<%= link_to 'Sign up now!', sign_up_path, remote: true %>
</div>